// 背景图片
bg-image($url) {
    background-image: url($url + '@2x.png');

    @media (-webkit-min-device-pixel-ratio: 3), (min-device-pixel-ratio: 3) {
        background-image: url($url + '@3x.png');
    }
}

// 不换行
no-wrap() {
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}

// 扩展点击区域
extend-click() {
    position: relative;

    &:before {
        content: '';
        position: absolute;
        top: -10px;
        left: -10px;
        right: -10px;
        bottom: -10px;
    }
}

// 一像素
.border-bottom-1px {
    position: relative;

    &::after {
        content: '';
        display: block;
        position: absolute;
    }
}

.border-top-1px {
    position: relative;

    &::before {
        content: '';
        display: block;
        position: absolute;
    }
}

border-top-1px($color) {
    &::before {
        border-top: 1px solid $color;
        left: 0;
        top: 0;
        width: 100%;
    }
}

border-bottom-1px($color) {
    &::after {
        border-bottom: 1px solid $color;
        left: 0;
        bottom: 0;
        width: 100%;
    }
}

@media (min-resolution: 2dppx) {
    .border-top-1px {
        &::before {
            transform: scaleY(0.5);
        }
    }

    .border-bottom-1px {
        &::after {
            transform: scaleY(0.5);
        }
    }
}

@media (min-resolution: 3dppx) {
    .border-top-1px {
        &::before {
            transform: scaleY(0.333);
        }
    }

    .border-bottom-1px {
        &::after {
            transform: scaleY(0.333);
        }
    }
}
